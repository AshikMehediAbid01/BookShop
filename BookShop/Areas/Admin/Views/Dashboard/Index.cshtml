@using BookShop.Models
@model List<Order>
@{
	ViewData["Title"] = "Dashboard";
}

<br />
<br />

<div class="row">
	<div class="col-8">
		<h3 class="text-danger"><strong>Pending: </strong>@ViewBag.Pending Orders</h3>
		<h3 class="text-warning"><strong>InProcess: </strong> @ViewBag.InProcess Orders</h3>
		<h3 class="text-info"><strong>Shipped: </strong> @ViewBag.Shipped Orders</h3>
		<h3 class="text-success"><strong>Delivered: </strong> @ViewBag.Delivered Orders</h3>
	</div>

	<div class="col-4">
		<h3>Total income: <strong>৳@ViewBag.TotalIncome</strong> </h3>
		<h4>Remaining income: <strong>৳@ViewBag.ExpectedIncome</strong> </h4>
	</div>


</div>

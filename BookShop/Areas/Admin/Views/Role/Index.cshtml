@using BookShop.Models
@model IEnumerable<ProductTypes>
@{
	ViewData["Title"] = "Roles";
}

<br />
<div class="row">
	<div class="col-6">
		<h2 class="text-info">Roles List</h2>
	</div>

	<div class="col-6 text-right">
		<a asp-action="Create" class="btn btn-info"><i class="fa-solid fa-plus"></i>&nbsp;Add New Role</a>
	</div>

</div>

<br />

<div>
	<table class="table table-striped border">
		<tr class="table-info">
			<th>
				Role
			</th>
			<th></th>
			<th></th>

			@foreach (var item in ViewBag.Roles)
			{
					<tr>
						<td>
						@item.Name
						</td>
						<td>
					<a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i></a>
						</td>
					</tr>


			}
		</>
	</table>
</div>

@section scripts {
		<script src="//cdn.jsdelivr.net/npm/alertifyjs@1.14.0/build/alertify.min.js"></script>
		<script type="text/javascript">
			$(function(){
				var msg = '@TempData["alertMsg"]'
				var Type = '@TempData["type"]'
				if(Type == "Create" || Type == "update")
				{
					alertify.success(msg);

				}
				else if(Type == "delete"){
					alertify.error(msg);
				}
			})
		</script>
}